{
  "manifest_version": 3,
  "name": "Tempo",
  "version": "1.1",
  "description": "Control YouTube video speed with keyboard shortcuts",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/tempo-icon-16.png",
      "32": "icons/tempo-icon-32.png",
      "48": "icons/tempo-icon-48.png",
      "128": "icons/tempo-icon-128.png"
    }
  },
  "icons": {
    "16": "icons/tempo-icon-16.png",
    "32": "icons/tempo-icon-32.png",
    "48": "icons/tempo-icon-48.png",
    "128": "icons/tempo-icon-128.png"
  }
}